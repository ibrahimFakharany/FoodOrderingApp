<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/abeezee_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:homeAsUpIndicator"></item>
    </style>
    <style name="MyRatingBar" parent="@style/Widget.AppCompat.RatingBar.Small">
        <item name="android:progressDrawable">@drawable/star_rating_bar_full</item>
    </style>



    <style name="text_input_theme" parent="Widget.Design.TextInputLayout">
        <item name="android:colorControlNormal">@color/background_button</item>
        <item name="android:colorControlActivated">@color/background_button</item>
    </style>
</resources>